<!-- navbar -->
<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="http://res.cloudinary.com/dpilgpat0/image/upload/v1479066097/hellodiet/logo/logo-blanc2.png" />
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <a href="" class="navbar-wagon-item navbar-wagon-link">Qui suis-je ?</a>
    <a href="" class="navbar-wagon-item navbar-wagon-link">Mon approche</a>
    <a href="" class="navbar-wagon-item navbar-wagon-link">Mes prestations</a>
    <a href="" class="navbar-wagon-item navbar-wagon-link">Contact</a>
  </div>

  <% if current_user %>
  <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <i class="fa fa-bars  white" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", root_path %></li>
          <li><%= link_to "Dashboard", root_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  <% else %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="navbar-login">
          <%= f.input :email, required: false, autofocus: true, label: false, class: "navbar-email" %>
          <%= f.input :password, required: false, label: false, class: "navbar-password" %>
          <%= f.button :submit, "Log in", class: "navbar-submit" %>
      </div>
    <% end %>
  <% end %>
</div>
