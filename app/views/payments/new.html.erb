<h1>Séance <%= @checkup.id %></h1>
<%= form_tag checkup_payments_path(@checkup) do %>
  <article>
    <label class="amount">
      <span>Prix: <%= humanized_money_with_symbol(@checkup.price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Séance"
    data-email="<%= current_user.email %>"
    data-description="Séance <%= @checkup.id %>"
    data-amount="<%= @checkup.price_cents %>"
    data-currency="<%= @checkup.price.currency %>"></script>

<% end %>
