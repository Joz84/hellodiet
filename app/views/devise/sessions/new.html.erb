<div class="wrapper-log">

  <div class="container">
    <h2>Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-xs-12 col-md-6  col-md-offset-3">
          <%= f.input :email, required: false, autofocus: true %>
        </div>
        <div class="col-xs-12 col-md-6  col-md-offset-3">
          <%= f.input :password, required: false, label: "Mot de passe" %>
        </div>
        <div class="col-xs-12 col-md-6  col-md-offset-3">
          <%= f.input :remember_me, as: :boolean, label: "se souvenir de moi" if devise_mapping.rememberable? %>
        </div>
        <div class="col-xs-12 col-md-2 col-md-offset-5">
          <%= f.button :submit, "Se connecter", style: 'width: 100%; margin-top: 30px;', class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

